<h1> New Expense!</h1>
<div id="calendar-one"></div>
<div id='remote_container'>
  <div class="modal fade" id="new_expense">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Create New Expense</h4>
        </div>
        <div class="modal-body">
        <%= form_tag "/expenses", method: :post do %>
          <div class="form-inputs">
            <%= text_field_tag :title %>
            <%= text_field_tag :date_range, input_html: { class: "form-control input-sm date-range-picker" } %>
            <%= text_field_tag :amount%>
            <%= hidden_field_tag :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
            <%= hidden_field_tag :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
            <%= select_tag :color, options_for_select([['Black','black'], ['Green','green'], ['Red','red']]) %>
          </div>

          <div class="form-actions">
            <%= submit_tag "Submit", class: "btn btn-primary" %>
            <%= link_to 'Delete', 
                        expense, 
                        method: :delete, 
                        class: 'btn btn-danger', 
                        data: { confirm: 'Are you sure?' }, 
                        remote: true unless @expense.new_record? %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>