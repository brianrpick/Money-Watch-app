<h1> New Expense!</h1>
<div class="ibox-content">
<%= form_tag '/expenses', method: :post do %>
  <div>
    <%= label_tag :description, "Descrption"%>:
    <%= text_field_tag :description%>
    </div>
  <div>
    <%= label_tag :amount, "Amount"%>:
    <%= text_field_tag :amount%>
  </div>
  <div>
    <%= label_tag :date, "Payment Date"%>:
    <%= select_tag :date, options_for_select(1..31) %>
  </div>
    <%= hidden_field_tag :user_id, current_user.id%>
  <div>
    <%= submit_tag "Submit", class: "btn btn-primary block full-width m-b"%>
  </div>
</div>
<%end%>
