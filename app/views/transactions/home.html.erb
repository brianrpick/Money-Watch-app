        }]
        } ;


        var doughnutOptionsTwo = {
        responsive: true
        };



        // total_transactions
        var ctx5 = document.getElementById("doughnutChart-two").getContext("2d");
        new Chart(ctx5, {type: 'doughnut', data: doughnutDataTwo, options:doughnutOptionsTwo});



