        }]
        } ;


        var doughnutOptions = {
        responsive: true
        };



        // total_transactions
        var ctx4 = document.getElementById("doughnutChart").getContext("2d");
        new Chart(ctx4, {type: 'doughnut', data: doughnutData, options:doughnutOptions});
        
        // weekly graph

        var doughnutDataTwo = {labels: ["Bank Fees", "Cash Advance", "Community", "Food and Drink", "Healthcare", "Interest", "Payments","Recreation", "Services", "Shops", "Tax", "Transfers", "Travel", "Other"],
